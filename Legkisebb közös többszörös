#include <stdio.h>
#include <stdlib.h>
int fgv (int af, int bf);
int main()
{
    int a=5 ,b=25 ,c=0;
    if ((a==0)&&(b==0))
    {
        c=0;
        printf("Nincs legkisebb közös többször: %i\n", c);
    }
    if ((a==0)&&(b!=0))
    {
        c=0;
        printf("Nincs legkisebb közös többször: %i\n", c);
    }
    if ((a!=0)&&(b==0))
    {
        c=0;
        printf("Nincs legkisebb közös többször: %i\n", c);
    }
    c= fgv(a,b);
    printf("A legkisebb közös többszörös: %i\n", c);
    return 0;
}

int fgv (int af, int bf)
{
    int cf=0;
    if ((af!=0)&&(bf!=0))
    {
        while (af!=bf)
        {
            if (af>bf)
            {
                af=af-bf;
            }
            else
            {
               bf=bf-af;
            }
        cf=af;
        }
    }
    return cf;
}
